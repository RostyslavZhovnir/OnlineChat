@model Chat.Models.ForgetPassword
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.2.1.min.js"></script>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <legend>Восстановления пароля</legend>
    <div class="form-horizontal">

       <p id="ViewBag"> @ViewBag.Succes</p>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
               

      

            <div class="editor-label">
                @Html.LabelFor(model => model.UserName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
            <br>
            <div class="editor-label">
                @Html.LabelFor(model => model.Email)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        <br>

        <input type="submit" value="Выслайть пароль на почту" class="cd-btn" />
        <br><br><a href="~/Topics/Index" class="loginBlock"> Назад </a>
</div>
    
         
}