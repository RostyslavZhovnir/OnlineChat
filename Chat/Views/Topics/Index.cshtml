﻿@model IEnumerable<Chat.Models.Topics>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>

<body>



    <div id="header" class="usersonline"></div>
    @{ if (User.Identity.IsAuthenticated)
        {
            <div class="dropdown">
                <p class="dropbtn">Users Online &#x25BF</p>
                <div class="dropdown-content">
                    <div class="usersonlinenames" id="chatusers"> </div>
                </div>
            </div>



        }}







    <section class="cd-intro">
        <div class="cd-intro-content bouncy">
            <h1>Thank you for visiting us</h1>
            <p>We hope you will have a great stay in fastest social network ever</p>
            
   

            @{ if (User.Identity.IsAuthenticated == false)
                {
                    <script src="~/Scripts/jquery-3.2.1.min.js"></script>

                    <div class="action-wrapper">
                        <a href="~/Account/login" class="loginBlock"> Login &nbsp;</a>
                        <a href="~/Account/register" class="loginBlock"> New user? &nbsp; </a>
                        <a href="~/Account/ResendPassword" class="loginBlock"> Forgot Password? </a>

                    </div>


                }}

        </div>
    </section>
    @{ if (User.Identity.IsAuthenticated)
        {
            <br>
            <p class="indexPageText">Join Any Article and start live conversation with other users. Top rated Articles will show up first</p>
            <div id="createNewGroup">
                <a href="~/topics/create">
                    <p> &#x271A; Add New</p>
                </a>


                @*@Html.ActionLink("Add new", "Create")*@
            </div>

            <table class="table" id="table">




                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (item.imageone != null)
                            {

                               <a href="@Url.Content("~/img/" + System.IO.Path.GetFileName(item.imageone)) "target="_blank"> <img src="@Url.Content("~/img/" + System.IO.Path.GetFileName(item.imageone))" alt="@item.title"  style="max-height:100px; max-width:200px" /></a>

                            }
                            @Html.DisplayFor(modelItem => item.title)
                          
                        </td>


                        @{ if (User.Identity.IsAuthenticated)
                    {



                                <td><a href="#"><p id="joinGroup">Join</p> </a> </td>


                                <td><a href="#"><p id="like">&#10084;</p></a></td>
                                <td class="likes">
                                   <p> @Html.DisplayFor(modelItem => item.countLikes)</p>
                                </td>

                            }
                        }

                    </tr>
                            }

            </table>


                            }
                            else
                            {
                                <script src="~/Scripts/ShowTableWhenUserNotAuth.js"></script>


                                <div id="homePage">
                                    <div class="indexTable">
                                        <div class="container-fluid">
                                            <div class="row">
                                                <div class="col-xs-6 col-sm-4"><div id="icontext"><img src="~/Images/IndexPageImg/indexSmile.png" /> ClickChats is 100%  an open community</div></div>
                                                <div class="col-xs-6 col-sm-4"><div id="icontext"><img src="~/Images/IndexPageImg/indexOnline.png" />All discussion are Live and with real users</div></div>
                                                <div class="col-xs-6 col-sm-4"><div id="icontext"><img src="~/Images/IndexPageImg/indexWeBlock.png" />We try to block/delete all illeagal or criminal materials</div></div>
                                                <div class="col-xs-6 col-sm-4"><div id="icontext"><img src="~/Images/IndexPageImg/indexHistory.png" />Chat history of every Article just in a few clicks</div></div>
                                                <div class="col-xs-6 col-sm-4"><div id="icontext"><img src="~/Images/IndexPageImg/indexAllDevices.png" />You don't need to install any side apps.</div></div>
                                      
                                                
                                               
                                                <div class="col-xs-6 col-sm-4"><div id="icontext"><img src="~/Images/IndexPageImg/indexReadWrite.png" />Create, read or vote for a real-time Articles</div></div>
                                               
                                              
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                              
                                <br>
                                <p class="indexPageText">Log In or Register to like, dislike or discuss topics in a live chat.</p>
                                <p class="seeArticles">Click to See Topics</p>

                                <br><br>


                                <table class="table" id="tablelogoff">




                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                          

                                            <td>
                                                @if (item.imageone != null)
                                                {

                                                    <img src="@Url.Content("~/img/" + System.IO.Path.GetFileName(item.imageone))" alt="" style="max-height:100px; max-width:200px" />

                                                }
                                                @Html.DisplayFor(modelItem => item.title)
                                            </td>

                                          
                                            <td class="likes">
                                                &#10084;   @Html.DisplayFor(modelItem => item.countLikes)
                                            </td>

                                            @{ if (User.Identity.IsAuthenticated)
                    {



                                                    <td><a href="#"><p id="joinGroup">Join</p> </a> </td>


                                                    <td><a href="#"><span class="glyphicon glyphicon-thumbs-up" id="like"></span></a></td>
                                                    <td class="likes">
                                                        @Html.DisplayFor(modelItem => item.countLikes)
                                                    </td>

                                                }
                                            }

                                        </tr>
                                                }

                                </table>  } }
    @{ if (User.Identity.IsAuthenticated == false)
        {
            <p class="hideArticles">Click to Hide </p>
        }

    }


    @{ if (User.Identity.IsAuthenticated)
        {



            <div class="main">
                @*<div id="loginBlock">

                        <input id="txtUserName" type="text"  value="@User.Identity.Name"/>

                    </div>*@

                <div id="chatBody">

                    <div id="groupName"></div>
                    <br>
                    <div id="count"></div>
                    <div id="inputForm">
                        <input type="text" id="messagebox" class="message" />
                        <input type="button" id="sendmessage" value="Send" />




                        @*<input type="button" id="clearHistory" value="Hide History" />*@
                        @*<input type="button" id="showHistory" value="Show History" />*@
                        <br>


                        <span class="glyphicon glyphicon-arrow-down" id="showHistory">History</span>


                        <span class="glyphicon glyphicon-arrow-up" id="clearHistory">Hide</span>



                    </div>
                    <br>
                    <div id="emptymessage"></div>

                    <div id="chatroom"></div>

                    @*<div class="usersonlinenames" id="chatusers">
                            <p><b>Users Online</b></p>

                        </div>*@


                    @*<a href="#" id="back-to-top" title="Back to top">&uarr;</a>*@


                </div>
                <audio id="audio" src="~/sounds/newmessage.mp3"></audio>

                
                <input id="hdId" type="hidden" />
                <input id="username" type="hidden" />
                <input id="grp" type="hidden" />
            </div>
                    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
                    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
                    <script src="~/signalr/hubs"></script>
                    <script src="~/Scripts/util.js"></script>


        }
    }





</body>

</html>
