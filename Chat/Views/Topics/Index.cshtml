@model IEnumerable<Chat.Models.Topics>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <section class="cd-intro">
        <div class="cd-intro-content bouncy">
            <h1>Thank you for visiting us</h1>
            <p>We hope you will enjoy the time to be here</p>
            @{ if (User.Identity.IsAuthenticated == false)
                {
                    <script src="~/Scripts/jquery-3.2.1.min.js"></script>

                    <div class="action-wrapper">
                        <a href="~/Account/login" class="cd-btn main-action">Login</a>
                        <a href="~/Account/register" class="cd-btn">New user?</a>
                        <a href="~/Account/ResendPassword" class="cd-btn">Forgot Password?</a>
                    </div>
                }}
           
        </div>
    </section>
    <p class="creatNewGroup">
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table" id="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.imageone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.imagetwo)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.imageone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.imagetwo)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>

                @{ if (User.Identity.IsAuthenticated)
                    {

                        <td><button class="cd-btnmin" id="btnSelect">Join</button></td>
                    }
                }
            </tr>
                    }

    </table>
    @{ if (User.Identity.IsAuthenticated)
        {



                    <div class="main">
                        @*<div id="loginBlock">

                                <input id="txtUserName" type="text"  value="@User.Identity.Name"/>

                            </div>*@

                        <div id="chatBody">
                            <div id="header"></div>
                            <div id="count"></div>
                            <div id="inputForm">
                                <input type="text" id="message" />
                                <input type="button" id="sendmessage" value="Send" />
                            </div>
                            <div id="emptymessage"></div>

                            <div id="chatroom"></div>

                            <div id="chatusers">
                                <p><b>Users Online</b></p>

                            </div>
                        </div>

                        <input id="hdId" type="hidden" />
                        <input id="username" type="hidden" />
                    </div>
                    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
                    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
                    <script src="~/signalr/hubs"></script>
                    <script src="~/Scripts/util.js"></script>

            }
        }





</body>

</html>
