@model Chat.Models.Topics

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    @if (User.Identity.Name == "admin")
    {


    <h3 style="color:red">Are you sure you want to delete this?</h3>
    <div>
        <h4>Topics</h4>
        <hr />
       
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.title)
                </dt>
                
                <dd>
                    @Html.DisplayFor(model => model.title)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.imageone)
                </dt>

                <dd>
                    @if (Model.imageone != null)
                    { <span id="titlesImage">

                    <img src="@Url.Content("~/img/" + System.IO.Path.GetFileName(Model.imageone))" alt="www.clickchats.com @Model.title" style="height:120px; width:170px" />
                </span>}

                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.imagetwo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.imagetwo)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
}

    @if (User.Identity.Name != "admin")
    {
        <p style="color:red">You are not authorized to view this page</p>
    }
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
</body>
</html>
